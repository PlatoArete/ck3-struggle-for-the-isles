# ============================
# CK3: Struggle for the Isles
# .editorconfig
# ============================

# Top-level declaration
root = true

# ---------- Global Defaults ----------
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# ---------- Paradox Script Files ----------
[*.{txt,gui,mod,asset,gfx,shader}]
indent_style = space
indent_size = 2
max_line_length = 120

# ---------- Localization (YAML) ----------
[*.{yml,yaml}]
indent_style = space
indent_size = 2
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = false   # Some loc keys need trailing spaces

# ---------- Markdown / Docs ----------
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false   # Preserve deliberate spaces for line breaks

# ---------- JSON / Config ----------
[*.{json,cfg,ini}]
indent_style = space
indent_size = 2

# ---------- Scripts (bash, python, js) ----------
[*.{sh,py,js}]
indent_style = space
indent_size = 2
end_of_line = lf

# ---------- Binary / No-edit ----------
[*.{dds,png,jpg,mesh,model,anim,ogg,mp3}]
insert_final_newline = false
trim_trailing_whitespace = false
charset = unset
